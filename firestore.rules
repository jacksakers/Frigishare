rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is a member of a household
    function isMember(householdId) {
      return request.auth != null && 
             request.auth.uid in get(/databases/$(database)/documents/households/$(householdId)).data.members;
    }
    
    // Households collection rules
    match /households/{householdId} {
      // Allow any authenticated user to read (needed for joining households)
      allow read: if request.auth != null;
      
      // Allow create only if the creator adds themselves to members
      allow create: if request.auth != null && 
                       request.auth.uid in request.resource.data.members;
      
      // Allow update only if user is already a member OR is adding themselves to members
      // Also allow members to update lastCheckIn
      allow update: if request.auth != null && 
                       (request.auth.uid in resource.data.members ||
                        request.auth.uid in request.resource.data.members);
      
      // Don't allow delete (households should be permanent)
      allow delete: if false;
      
      // Items sub-collection
      match /items/{itemId} {
        // Allow full CRUD if user is a household member
        allow read, write: if isMember(householdId);
      }
      
      // Shopping list sub-collection
      match /shopping_list/{listItemId} {
        // Allow full CRUD if user is a household member
        allow read, write: if isMember(householdId);
      }
      
      // Previous items sub-collection (for remembering deleted items)
      match /previous_items/{itemId} {
        // Allow full CRUD if user is a household member
        allow read, write: if isMember(householdId);
      }
    }
  }
}
